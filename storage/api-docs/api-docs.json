    "paths": {
        "/subscribe-to-channel": {
            "post": {
                "tags": [
                    "Channel Subscriptions"
                ],
                "summary": "Subscribe users to a channel or chat",
                "description": "Subscribe users to a channel or chat.",
                "operationId": "d9f2ee6b829ab941309343814be1e274",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 9223372036854775807
                                    },
                                    "channel_name": {
                                        "type": "string",
                                        "example": "general"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User subscribed to channel",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User subscribed to channel"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/send-message": {
            "post": {
                "tags": [
                    "Messages"
                ],
                "summary": "Send messages to subscribers",
                "description": "Send messages to subscribers.",
                "operationId": "15424513e7fd7e1663c6dcb917639da3",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 123
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Hello, subscribers!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Message sent to subscribers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Message sent to subscribers"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/subscribe-to-chatbot": {
            "post": {
                "tags": [
                    "Subscription"
                ],
                "summary": "Subscribe users to a Twitter chatbot",
                "operationId": "subscribeToChatBot",
                "requestBody": {
                    "description": "User ID",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id"
                                ],
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 123
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User subscribed to Twitter chatbot",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User subscribed to Twitter chatbot"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/webhook": {
            "post": {
                "tags": [
                    "Webhooks"
                ],
                "summary": "Handle webhooks",
                "description": "Handle webhooks to receive responses from the messenger API.",
                "operationId": "a52674d0958cb262bc2af6137c11073b",
                "responses": {
                    "200": {
                        "description": "Webhook handled successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Webhook handled successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}